#!/usr/bin/env bash

i=0
step=1
if [[ $# -eq 1 ]]; then
  i=$1
  step=-1
fi
while sleep 1; do
  if [ $(($i % 60)) -lt 10 ]; then
    echo "    $(($i / 60)):0$(($i % 60))"
    printf "\33[A";
  else
    echo "    $(($i / 60)):$(($i % 60))"
    printf "\33[A";
  fi
  i=$(($i + $step))
  if [ $i -eq 0 ]; then
    step=1
  fi
done

