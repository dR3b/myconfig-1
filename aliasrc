# remove orphan pacman packages
myRemOrphans() {
  if [[ ! -n $(pacman -Qdt) ]]; then
    echo no orphans to remove
  else
    sudo pacman -Rs $(pacman -Qdtq)
  fi
}

# Pacman alias examples
alias pacupg='sudo pacman -Syu ; echo ; myRemOrphans'
