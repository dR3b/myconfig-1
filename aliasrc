# gen QR-Code for a WiFi:
genQrCode(){
  have qrencode && {
    SSID=$(zenity --entry --text="Network name (SSID)" --title="Create WiFi QR")
    PASS=$(zenity --password --title="Wifi Password")
    qrencode -s 7 -o qr-${SSID}.png "WIFI:S:${SSID};T:WPA;P:${PASS};;"
  } || echo "needs qrencode"
}

