#alias myStopScreensaver="xset dpms 9997 9998 9999"
myStopScreensaver(){
  while true; do 
    xdotool mousemove_relative 1 1
    xdotool mousemove_relative -- -1 -1
    sleep $((60 * 4))
  done
}

