e() {
  if [ $# -eq 1 ]; then
    if [ -f $1 ] ; then
      case $( tr '[:upper:]' '[:lower:]' <<<"$1" ) in
        *.pdf|*.djvu|*.ps) zathura $1 ;;
        *.jpg|*.png) geeqie $1 ;;
        *.zip) file-roller $1 ;;
        *) vim $1 ;;
      esac
    else
      vim $1
    fi
  else
    vim
  fi
}

