#!/bin/bash
#
# generated by ./aktualisieren
if [ "$(id -u)" != "0" ]; then
  exit 1
fi
FOLDER="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/"
myinstall(){
  # $1: src path
  # $2: dest path
  # $3: perms
  # $4: owner
  # $5: group
  read -r -p "$2? [y/N] " response
  response=${response,,}
  if [[ $response =~ ^(yes|y)$ ]]; then
    install -D --mode=$3 --owner=$4 --group=$5 $1 $2
  fi
}
myinstall "${FOLDER}bin/m3u-handler.sh" "/home/hubi/bin/m3u-handler.sh" 700 hubi users
myinstall "${FOLDER}bin/pls-handler.sh" "/home/hubi/bin/pls-handler.sh" 700 hubi users
myinstall "${FOLDER}config/beets/config.yaml" "/home/hubi/.config/beets/config.yaml" 600 hubi users
myinstall "${FOLDER}ncmpcpp/config" "/home/hubi/.ncmpcpp/config" 600 hubi users
myinstall "${FOLDER}zprofile" "/home/hubi/.zprofile" 600 hubi users
myinstall "${FOLDER}etc/asound.conf" "/etc/asound.conf" 644 root root
myinstall "${FOLDER}etc/mpd.conf" "/etc/mpd.conf" 644 mpd root
myinstall "${FOLDER}etc/dnsmasq.conf" "/etc/dnsmasq.conf" 644 root root
myinstall "${FOLDER}etc/sysctl.d/90-inotify.conf" "/etc/sysctl.d/90-inotify.conf" 644 root root
myinstall "${FOLDER}etc/systemd/system/getty@tty1.service.d/autologin.conf" "/etc/systemd/system/getty@tty1.service.d/autologin.conf" 644 root root
myinstall "${FOLDER}etc/minidlna.conf" "/etc/minidlna.conf" 644 root root
