FOLDER="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/"
myinstall(){
  # $1: src path
  # $2: dest path
  # $3: perms
  # $4: owner
  # $5: group
  read -r -p "$2? [y/N] " response
  response=${response,,}
  if [[ $response =~ ^(yes|y)$ ]]; then
    install -D --mode=$3 --owner=$4 --group=$5 $1 $2
  fi
}
